{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/PoRaceRagdoll.Api/PoRaceRagdoll.Api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "start-api",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/src/PoRaceRagdoll.Api/PoRaceRagdoll.Api.csproj"
      ],
      "problemMatcher": "$msCompile",
      "isBackground": true,
      "group": "none"
    },
    {
      "label": "start-web",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/src/poraceragdoll-web"
      },
      "isBackground": true,
      "problemMatcher": [],
      "group": "none"
    },
    {
      "label": "start-all",
      "dependsOn": ["start-api", "start-web"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": "none"
    }
  ]
}
